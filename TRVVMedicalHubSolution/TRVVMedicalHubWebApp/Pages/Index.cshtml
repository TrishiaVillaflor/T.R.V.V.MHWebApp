@page
@model TRVVMedicalHubWebApp.Pages.IndexModel


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Your Page Title</title>
    <link rel="stylesheet" href="styles.css">
</head>
<body>

    <div class="container">
        <form id="search-form" method="post" asp-page-handler="SearchPatients" class="search-form">
            <label for="Search.Keyword">Search</label>
            <input asp-for="Search.Keyword" />
            <button class="btn btn-primary" type="submit">Search</button>
        </form>

        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col">Name</th>
                    <th scope="col">Address</th>
                    <th scope="col">Phone</th>
                    <th scope="col">Department</th>
                    <th scope="col">Illness</th>
                    <th scope="col">Medication</th>
                    <th scope="col">Gaurdian</th>
                    <th scope="col">Action</th>
                </tr>
            </thead>
            <tbody>
                @{
                    foreach (var item in Model.PatientsList)
                    {
                        <tr>
                            <th scope="row">@item.PatientsId</th>
                            <td>@item.PatientsName</td>
                            <td>@item.PatientsAddress</td>
                            <td>@item.PatientsPhone</td>
                            <td>@item.PatientsDepartment</td>
                            <td>@item.PatientsIllness</td>
                            <td>@item.PatientsMedication</td>
                            <td>@item.PatientsGuardian</td>
                            <td>
                                <form method="post" asp-route-id="@item.PatientsId" asp-page-handler="DeletePatients">
                                    <button class="btn btn-danger" type="submit">Delete</button>
                                </form>
                                <form method="post" asp-route-id="@item.PatientsId" asp-page-handler="EditPatients">
                                    <button class="btn btn-primary" type="submit">Edit</button>
                                </form>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>

        <form id="new-patients-form" method="post" asp-page-handler="CreatePatients" class="patients-form">
            <label for="Patients.PatientsId">Id</label>
            <input asp-for="Patients.PatientsId" />

            <label for="Patients.PatientsName">Name</label>
            <input asp-for="Patients.PatientsName" />

            <label for="Patients.PatientsAddress">Address</label>
            <input asp-for="Patients.PatientsAddress" />

            <label for="Patients.PatientsPhone">Phone</label>
            <input asp-for="Patients.PatientsPhone" />

            <label for="Patients.PatientsDepartment">Department</label>
            <input asp-for="Patients.PatientsDepartment" />

            <label for="Patients.PatientsIllness">Illness</label>
            <input asp-for="Patients.PatientsIllness" />

            <label for="Patients.PatientsMedication">Medication</label>
            <input asp-for="Patients.PatientsMedication" />

            <label for="Patients.PatientsGuardian">Guardian</label>
            <input asp-for="Patients.PatientsGuardian" />

            <div class="form-actions">
                <button class="btn btn-primary" type="submit">Create</button>
                <button class="btn btn-primary" type="submit" asp-page-handler="UpdatePatients">Update</button>
                <a class="btn btn-primary" role="button" asp-page-handler="NewPatients">New</a>
            </div>
        </form>
    </div>

</body>
</html>
<style>
body {
    font-family: 'Arial', sans-serif;
    background-color: #f8f;
    margin: 0;
    padding: 0;
}

.container {
    max-width: 800px;
    margin: 20px auto;
    padding: 20px;
    background-color: #fff;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
}
.search-form,
.patients-form {
    margin-bottom: 20px;
}

.table {
    width: 100%;
    border-collapse: collapse;
}

.table th,
.table td {
    border: 1px solid #dee2e6;
    padding: 8px; /* Adjusted padding for smaller screens */
    text-align: left;
}

.table th {
    background-color: #007bff;
    color: #fff;
}

.patients-form label {
    display: block;
    margin-bottom: 0px;
}

.patients-form input {
    width: 100%;
    padding: 8px; 
    margin-bottom: 5px;
    box-sizing: border-box;
}

.form-actions {
    margin-top: 5px;
}

.btn {
    display: inline-block;
    padding: 8px 16px; 
    font-size: 14px; 
    text-align: center;
    text-decoration: none;
    cursor: pointer;
    border: none;
    border-radius: 4px;
    margin-right: 10px;
}

.btn-primary {
    background-color: #007bff;
    color: #fff;
}

.btn-danger {
    background-color: #dc3545;
    color: #fff;
}
</style>
